<?xml version="1.0" encoding="UTF-8"?>
<context>
	<Resource name="jdbc/univ"
	auth="Container"
	type="javax.sql.DataSource"
	driverClassName="com.mysql.jdbc.Driver"
	url="jdbc:mysql://localhost:3306/univ?serverTimezone=UTC"
	username="username"
	password="password"
	maxTotal="16"
	maxIdle="4"
	maxWaitMillis="-1"/>
</context>
